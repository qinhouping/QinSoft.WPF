<UserControl x:Class="EMChat2.View.Main.Tabs.User.DepartmentDetailAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMChat2.View.Main.Tabs.User"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Department.Name}" Margin="5" Style="{StaticResource Tip}" FontSize="20"></TextBlock>
        <TextBlock Grid.Row="1" Style="{StaticResource BaseTextBlock}" Text="{Binding Department.AllStaffs.Length,StringFormat='- {0}人 -'}" HorizontalAlignment="Center" Foreground="#AAAAAA" Margin="5"></TextBlock>
    </Grid>
</UserControl>
