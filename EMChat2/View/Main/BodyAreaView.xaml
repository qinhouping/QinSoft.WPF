<UserControl x:Class="EMChat2.View.Main.BodyAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:EMChat2.View"
             xmlns:tabs="clr-namespace:EMChat2.View.Main.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl Style="{StaticResource IM-Tab}">
            <TabItem ToolTip="消息">
                <TabItem.Style>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource IM-TabItem}">
                        <Setter Property="Header">
                            <Setter.Value>
                                <TextBlock Style="{StaticResource IconCommentO}"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Header">
                                    <Setter.Value>
                                        <TextBlock Style="{StaticResource IconComment}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>

                <tabs:ChatTabAreaView x:Name="chatTab"></tabs:ChatTabAreaView>
            </TabItem>
            <TabItem ToolTip="通讯录">
                <TabItem.Style>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource IM-TabItem}">
                        <Setter Property="Header">
                            <Setter.Value>
                                <TextBlock Style="{StaticResource IconAddressBookO}"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Header">
                                    <Setter.Value>
                                        <TextBlock Style="{StaticResource IconAddressBook}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>

                <tabs:UserTabAreaView x:Name="userTab"></tabs:UserTabAreaView>
            </TabItem>

            <TabItem ToolTip="日程">
                <TabItem.Style>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource IM-TabItem}">
                        <Setter Property="Header">
                            <Setter.Value>
                                <TextBlock Style="{StaticResource IconCalendarO}"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Header">
                                    <Setter.Value>
                                        <TextBlock Style="{StaticResource IconCalendar}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>

                <TextBlock Text="日程模块"></TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
