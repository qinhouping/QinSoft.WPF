<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="IM-App-Border" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{StaticResource DeepPurpleBrush}"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
    </Style>

    <Style x:Key="IM-Content-Border" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#AAAAAA"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="Gray" Direction="270" Opacity="0.5"></DropShadowEffect>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="Transparent"></Setter>
    </Style>
</ResourceDictionary>