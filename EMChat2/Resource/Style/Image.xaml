<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Image}" x:Key="IM-Header-Image">
        <Setter Property="Height" Value="32"></Setter>
        <Setter Property="Width" Value="32"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="IM-Big-Header-Image">
        <Setter Property="Height" Value="64"></Setter>
        <Setter Property="Width" Value="64"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="IM-Small-Header-Image">
        <Setter Property="Height" Value="24"></Setter>
        <Setter Property="Width" Value="24"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
    </Style>

</ResourceDictionary>