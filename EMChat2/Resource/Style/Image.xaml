<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Image}" x:Key="IM-HeaderImage">
        <Setter Property="Height" Value="36"></Setter>
        <Setter Property="Width" Value="36"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="IM-LoginHeaderImage">
        <Setter Property="Height" Value="64"></Setter>
        <Setter Property="Width" Value="64"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
    </Style>

</ResourceDictionary>