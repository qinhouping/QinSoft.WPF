<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="IM-EmptyChatLabel" TargetType="{x:Type Label}" >
        <Setter Property="Foreground" Value="#CCCCCC"></Setter>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"></Setter>
    </Style>

    <Style x:Key="IM-Name" TargetType="{x:Type Label}" >
        <Setter Property="Foreground" Value="#BBBBBB"></Setter>
        <Setter Property="FontFamily" Value="华文楷体"></Setter>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"></Setter>
        <Setter Property="Opacity" Value="0.5"></Setter>
    </Style>
</ResourceDictionary>